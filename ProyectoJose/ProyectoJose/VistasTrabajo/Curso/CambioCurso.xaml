<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoJose.VistasTrabajo.CambioCurso"
              Title="Modificar o Eliminar Curso" BackgroundImage="fondo1.png">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Spacing="10" Padding="30">

                <Label Text="Nombre: " FontAttributes="Bold"/>
                <Entry x:Name="nombre" Placeholder="Nombre" Text="{Binding Nombre}" BackgroundColor="White"/>
                <Label Text="Duración: " FontAttributes="Bold"/>
                <Entry x:Name="duracion" Placeholder="Duración" Text="{Binding Duracion}" BackgroundColor="White"/>

                <Button Text="Actualizar" Clicked="btn_actualizar" BackgroundColor="LawnGreen" BorderColor="Black"
                         WidthRequest="170" HeightRequest="45" HorizontalOptions="Center" Margin="20,35,20,10"/>
                <Button Text="Eliminar" Clicked="btn_eliminar" BackgroundColor="Red" BorderColor="Black"
                        WidthRequest="170" HeightRequest="45" HorizontalOptions="Center" Margin="20,10,20,20"/>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>