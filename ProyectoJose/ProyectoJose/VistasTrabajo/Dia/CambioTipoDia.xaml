<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ProyectoJose.VistasTrabajo.CambioTipoDia"
             Title="Modificar o Eliminar Tipo Día" BackgroundImage="fondo1.png">
    <ScrollView>
        <StackLayout Spacing="20" Padding="25">

            <Label Text="Nombre: " FontAttributes="Bold"/>
            <Entry x:Name="nombre" Placeholder="Nombre" Text="{Binding Denominacion}" BackgroundColor="White"/>
            <Label Text="Importe/dia: " FontAttributes="Bold"/>
            <Entry x:Name="dinero" Placeholder="Importe" Text="{Binding Importe}" BackgroundColor="White"/>

            <Button Text="Actualizar" Clicked="btn_actualizar" BackgroundColor="LawnGreen" BorderColor="Black"
                    WidthRequest="170" HeightRequest="45" HorizontalOptions="Center" Margin="20,25,20,10"/>
            <Button Text="Eliminar" Clicked="btn_eliminar" BackgroundColor="Red" BorderColor="Black"
                     WidthRequest="170" HeightRequest="45" HorizontalOptions="Center" Margin="20,10,20,20"/>

        </StackLayout>
    </ScrollView>
    

</ContentPage>